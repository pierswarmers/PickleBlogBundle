<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="pickle.blog.blog_manager.class">Pickle\Bundle\BlogBundle\Model\BlogManager</parameter>
    </parameters>

    <services>

        <service id="pickle.blog.blog_repository" class="%pickle.blog.blog_repository.class%" />

        <service id="pickle.blog.manager" class="%pickle.blog.blog_manager.class%">
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument>%pickle_blog_entity_class%</argument>
            <argument>%pickle_blog_max_results%</argument>
        </service>

    </services>

</container>
